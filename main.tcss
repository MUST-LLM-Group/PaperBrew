Button {
    width: 16;
    border: solid #9ACBD0;
}

Terminal {
    width: 100%;
    height: 100%;
    background: black 0%;
}

PopupScreen {
    align: center middle;
}

DashBoard, Conda, Pip, HuggingFace, Papers {
    width: 60%;
    height: 60%;
    border: thick $background 80%;
}

CPU, GPU, Mem, Disk {
    height: 40%;
    border: solid #9ACBD0;
}

RichLog {
    height: 20;
    width: 100%;
    background: black 0%;
}

#conda_rich_log, #pip_rich_log {
    height: auto;
    width: 100%;
}

#basic_info {
    height: 40%;
    border: solid #9ACBD0;
}

MemChart {
    height: 4;
}
#gpu_label {
    width: 100%;
}
#conda_env_listview {
    margin: 1;
    height: 6;
}

#new_env_name_input {
    width: 40%;
}

#new_env_version_select {
    width: 16;
}

#pip_mirror_label {
    align: left bottom;
}

#pip_install_package_name_input {
    width: 30%;
}

#pip_package_list_view {
    height: 30%;
}

.box {
    height: 100%;
    border: solid #9ACBD0;
}

.disk_label_left {
    width: 30%;
    text-align: left;
}

.disk_label_right {
    width: 70%;
    text-align: right;
}


QuitScreen {
    align: center middle;
}

#dialog {
    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}

#question {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}



