.text_box {
    height: 100%;
    width: auto;
    align: left middle;
}

.box {
    height: 100%;
    border: solid #9ACBD0;
}

.main_button {
    width: 16;
    border: solid #9ACBD0;
}

#magic_button {
    width: 16;
    background: #A32449;
    border: solid #9ACBD0;
}

#magic_button:hover {
    background: #9ACBD0 0%;
}

Terminal {
    width: 100%;
    height: 100%;
    background: black 0%;
}

PopupScreen {
    align: center middle;
}

Magic, DashBoard, Conda, Pip, Papers {
    width: 60%;
    height: 60%;
    border: ascii #9ACBD0 100%;
}

HuggingFace {
    width: 60%;
    height: 40%;
    background: black 0%;
    border: ascii #9ACBD0 100%;
}

GPU {
    height: 8;
    border: solid #9ACBD0;
}
CPU {
    height: 14;
    border: solid #9ACBD0;
}

Mem, Disk {
    height: 14;
    border: solid #9ACBD0;
}

BrailleStream {
    height: 16;
    width: 100%;
}

#magic_log {
    width: 100%;
    height: 100%;
    background: black 10%;
}

#conda_log_group, #pip_log_group {
    height: 10;
    border: solid #9ACBD0;
}

#conda_log, #pip_log {
    height: 8;
    width: 100%;
    background: black 0%;
}

#basic_info {
    height: 40%;
    border: solid #9ACBD0;
}

MemChart {
    height: 4;
}
#gpu_label {
    width: 100%;
}
#conda_env_listview {
    margin: 1;
    height: 6;
}

#new_env_name_input {
    width: 40%;
}

#new_env_version_select {
    width: 16;
}

#pip_horizontal_group {
    height: 3;
}

#pip_install_package_name_input {
    width: 30%;
}

#pip_mirror_label {
    align: left middle;
}

#pip_install_package_name_input {
    width: 30%;
}

#pip_package_list_view {
    height: 30%;
}

#hf_mirror_label, #hf_home_label {
    width: 18;
}

#hf_mirrors_select, #hf_home_input {
    width: 40%;
}
#hf_home_button {
    width: auto;
}


.disk_label_left {
    width: 30%;
    text-align: left;
}

.disk_label_right {
    width: 70%;
    text-align: right;
}


QuitScreen {
    align: center middle;
}

#dialog {
    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}

#question {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

